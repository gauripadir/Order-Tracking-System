@model List<Order>

<head>
    <style>
        .card {
            border-radius: 15px;
            overflow: hidden;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            }

        .btn-warning {
            font-weight: bold;
            text-transform: uppercase;
        }
    </style>
</head>

<div class="container py-5">
    <h2 class="text-center mb-4">My Orders</h2>
    <div class="row">
        @foreach (var order in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Order #@order.OrderId</h5>
                        <p class="card-text">
                            <strong>Date:</strong> @order.OrderDate.ToString("dd MMM yyyy")<br />
                            <strong>Status:</strong> <span class="badge bg-primary">@order.OrderStatus</span><br />
                            <strong>Total:</strong> $@order.TotalAmount
                        </p>
                        <a href="/Customer/TrackOrder/@order.OrderId" class="btn btn-warning w-100">
                            Track Order
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


